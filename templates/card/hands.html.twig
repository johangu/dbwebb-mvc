{% extends "base.html.twig" %}

{% block title %}Dealt Hands{% endblock %}

{% block body %}
<section>
    {% include "card/_nav.html.twig" %}
</section>

<h1>Dealt Hands</h1>

{% if not hands is empty %}
{% for hand in hands %}
  <div class="hand">
    <h2>Player {{ loop.index }}</h2>
    <div>
      {% for card in hand.cards %}
        <span>
          [<span class="card-suit {{ card.suit | lower }}">
          {{ card.getRank() }}
          </span>]
        </span>
      {% endfor %}
    </div>
  </div>
{% endfor %}
{% else %}
  <p>No hands have been dealt yet.</p>
{% endif %}

<p>Deck has {{ deck.getCount() }} cards left.</p>
{% endblock %}
