{% extends "base.html.twig" %}

{% block title %}Deck{% endblock %}

{% block body %}
<h1>Current Deck</h1>
{% include "card/nav.html.twig" %}
{% if sorted %}
<h2>Sorted representation</h2>
{% else %}
<h2>Shuffled</h2>
{% endif %}

{% if deck is not empty %}
    {% if sorted %}
    <p>This is a sorted representation. The deck may still be shuffled.</p>
    {% endif %}
    <div>
        {% for card in deck %}
            <span>
                [<span class="card-suit {{ card.suit | lower }}">
                {{ card.getRank() }}
                </span>]
            </span>
        {% endfor %}
    </div>
{% else %}
    <p>No cards in the deck.</p>
{% endif %}
{% endblock %}
